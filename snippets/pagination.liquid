{% if pagination.pages > 0 %}
    <nav role="navgation" class="flex justify-center my-8">
        {% if pagination.previous %}
            <a class="border border-white text-white hover:bg-white hover:text-black py-3 px-4 mx-1 rounded-sm font-medium" href="{{ pagination.previous.url }}">
                {{ pagination.previous.title }}
            </a>
        {% endif %}
 
        {% for part in pagination.parts %}
            {% if part.is_link %}
                <a class="border border-white text-white hover:bg-white hover:text-black py-3 px-4 mx-1 rounded-sm font-medium" href="{{ part.url }}">
                {{ part.title }}
            </a>
            {% else %}
                <span class="border border-white bg-white text-black py-3 px-4 mx-1 rounded-sm font-medium">{{ part.title }}</span>
            {% endif %}
            
        {% endfor %}
        
        {% if pagination.next %}
            <a class="border border-white text-white hover:bg-white hover:text-black py-3 px-4 mx-1 rounded-md font-medium" href="{{ pagination.next.url }}">
                {{ pagination.next.title }}
            </a>
        {% endif %}
        
    </nav>
{% endif %}