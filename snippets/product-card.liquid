<div class="w-full py-6 px-3">
    <div class="border bg-white/20 ring-1 ring-black/5 shadow-md hover:shadow-lg rounded-lg overflow-hidden">
        <a href="{{ product.url }}">
            {% if product.featured_image %}
                <div class="h-80 overflow-hidden">
                    <img width="" height="" class="w-full h-full object-cover transition duration-300 ease-in-out hover:scale-105 transform" src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.featured_image.alt }}">
                </div>
                
            {% else %}
                <div class="h-80 overflow-hidden">
                    {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover bg-gray-100' }}
                </div>
            {% endif %}
        </a>
        
        <div class="flex flex-col p-4">
            <span class="text-sm text-gray-100">{{ product.vendor }}</span>

            <a href="{{ product.url }}" class="text-black font-bold uppercase ">{{ product.title }}</a>

            <p class="text-back">{{ product.price | money }}</p>
        </div>
    </div>
</div>


