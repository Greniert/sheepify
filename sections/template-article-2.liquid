<article class="py-8">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'article_title' %}
        
        <div class="flex flex-col item-center justify-center text-center">
            <a href="{{ blog.url }}" class="text-base text-center uppercase text-gay-500 hover:text-gray-900 font-bold">{{ blog.title }}</a>
            <h1 class="text-4xl md:text-6xl font-medium">{{ article.title }}</h1>
        </div>
      {% when 'article_author' %}
        <div class="flex item-center text-center justify-center">
            <div class="max-w-7xl text-center">
                {% if section.settings.enable_author %}
                    <small>{{ article.author }}</small>
                {% endif %}
            </div>
        </div>
         
      {% when 'article_published_date' %}
        <div class="flex item-center justify-center">
            <div class="max-w-7xl text-center">
                {% if section.settings.enable_published_date %}
                    <p>{{ article.published_at | date: "%d %m %Y" }}</p>
                {% endif %}
            </div>
        </div>
       
      {% when 'featured_image' %}

        <div class="max-w-7xl container bg-blue-100 rounded-lg md:mx-auto overflow-hidden my-4">
            {% if article.image != blank %}
                <img class="w-full h-80 md:h-96 object-cover object-center" height="" width="" src="{{ article.image | image_url: width: 450 }}" alt="{{ article.image.alt }}">
            {% else %}
                {% assign placeholder_image = "'lifestyle-2'" %}
                {{ placeholder_image | placeholder_svg_tag: 'w-full h-80 md:h-96 object-cover object-center p-5' }}
            {% endif %}
        </div>
        
      {% when 'article_content' %}
        <div class="article-content container">
          {{ article.content }}
        </div>
    {% else %}
      {% endcase %}
    {% endfor %}
  </article>


  {% schema %}
    {
      "name": "Template Article",
      "settings": [
        {
          "type": "checkbox",
          "id": "enable_author",
          "default": true,
          "label": "Display Author Name"
        }, {
          "type": "checkbox",
          "id": "enable_published_date",
          "default": true,
          "label": "Display Published Date"
        }
      ],
      "blocks": [
        {
          "type": "article_title",
          "name": "Title",
          "limit": 1
        },
        {
          "type": "article_author",
          "name": "Author",
          "limit": 1
        },
        {
          "type": "article_published_date",
          "name": "Published Date",
          "limit": 1
        },
        {
          "type": "featured_image",
          "name": "Thumbnail",
          "limit": 1
        }, {
          "type": "article_content",
          "name": "Content",
          "limit": 1
        }
      ]
    }
  {% endschema %}