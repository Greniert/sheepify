{% for block in section.blocks %}
    {% case block.type %}
        {% when 'article_title' %}
            <h1>{{ article.title }}</h1>
        {% when 'article_author' %}
            {% if section.settings.enable_author %}
                <small>{{ article.author }}</small>
            {% endif %}
        {% when 'article_publised_date' %}
            {% if section.settings.enable_published_date %}
                <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">{{ article.published_at | date: '%Y-%m-%d' }} </time>
            {% endif %}
        {% when 'featured_image' %}
            <img width="" height="" src="{{ article.image | image_url: "large"}}" alt="{{ article.image.alt }}">
        {% when 'article_content' %}
            <div class="article-content">
                {{ article.content }}
            </div>
        {% else %}
            
    {% endcase %}
    
{% endfor %}   

{% schema %}
    {
        "name": "Template Article",
        "settings": [
            {
                "type": "checkbox",
                "id": "enable_author",
                "default": true,
                "label": "Show author"
            },
            {
                "type": "checkbox",
                "id": "enable_published_date",
                "default": true,
                "label": "Show published date"

            }
        ],
        "blocks" : [
            {
                "type": "article_title",
                "name": "Title",
                "limit": 1
            },
            {
                "type": "article_author",
                "name": "Author",
                "limit": 1
            },
            {
                "type": "article_published_date",
                "name": "Published Date",
                "limit": 1
            },
            {
                "type" : "featured_image",
                "name" : "Thumbnail",
                "limit": 1
            },
            {
                "type": "article_content",
                "name": "Content",
                "limit": 1
            }
        ]
    }
{% endschema %}