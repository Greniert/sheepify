<!doctype html>
<html>
  <head>
    <title>{{ page_title }}</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="{{ page_description | escape }}">
    <link rel="canonical" href="{{ canonical_url }}">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
    {{ content_for_header }}
    <!-- Header hook for plugins -->
    <link href="
https://cdn.jsdelivr.net/npm/atropos@2.0.2/atropos.min.css
" rel="stylesheet">
    {{ 'app.css' | asset_url | stylesheet_tag }}
    <link rel="stylesheet" href="path/to/atropos.css" />
    <script src="{{ 'app.js' | asset_url }}" defer></script>

    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <style>
      body {
        background: url('{{ settings.checkout_body_background_image | img_url: 'medium' }}');
      }
    </style>
  </head>
  {% section 'zone-detection' %}
  <body class="container mx-auto  bg-fixed bg-cover bg-center bg-no-repeat py-5">
    {% section 'header' %}
    
    <main role="main">
      {{ content_for_layout }}
    </main>
    {% section 'cart' %}
  </body>
</html>